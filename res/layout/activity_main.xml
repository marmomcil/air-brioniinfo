<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/old_bus"
    tools:context="hr.foi.air.brioniinfo.MainActivity" >

    <Button
        android:id="@+id/btnPregledInformacija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btnPregledInformacija"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/btnPregledInformacija"
        android:text="@string/btnPregledInformacija" />

    <Button
        android:id="@+id/btnPosebanVozniRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnVozniRed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/btnPosebanVozniRed"
        android:text="@string/btnPosebanVozniRed" />

    <Button
        android:id="@+id/btnVozniRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPosebanVozniRed"
        android:layout_alignLeft="@+id/btnPregledInformacija"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/btnVozniRed"
        android:layout_marginBottom="90dp"
        android:text="@string/btnVozniRed" />

    <Button
        android:id="@+id/btnCjenikUsluga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPregledInformacija"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/btnCjenikUsluga"
        android:layout_below="@+id/btnPregledInformacija"
        android:layout_marginTop="72dp"
        android:text="@string/btnCjenikUsluga" />

</RelativeLayout>
